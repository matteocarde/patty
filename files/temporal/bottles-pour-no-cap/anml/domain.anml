type bottle;

fluent integer litres(bottle a);

constant boolean left(bottle a);
constant boolean right(bottle a);

action pour(bottle a, bottle b) {
   duration := 1.0;
   [start] litres(a) > 0;
   [start] left(a) == true;
   [start] right(b) == true;

   [start] litres(a) := litres(a) - 1;
   [end] litres(b) := litres(b) + 1;
};
